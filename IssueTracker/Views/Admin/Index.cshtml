@model IssueTracker.Models.AdminViewModel
@inject IssueTracker.Services.Profile.ProfileManager ProfileManager

@{
    ViewData["Title"] = "Index";
}



<div class="row">
    <div class="col-lg-12">
        <div class="nav-tabs-custom">
            <ul class="nav nav-tabs">
                <li class="active"><a href="#tab_1" data-toggle="tab">Users</a></li>
                <li><a href="#tab_2" data-toggle="tab">Statuses</a></li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane active" id="tab_1">
                    <h1 class="bg-info text-white">Administration</h1>
                    <a asp-action="CreateUser" class="btn btn-primary">Create a User</a>
                    <table class="table table-sm table-bordered">
                        <tr><th>ID</th><th>Name</th><th>Email</th><th>Roles</th><th>Delete</th></tr>
                        @foreach (ApplicationUser user in Model.applicationUsers)
                        {
                            <tr>
                                <td>@user.Id</td>
                                <td>@user.UserName</td>
                                <td>@user.Email</td>
                                <td>@ProfileManager.UserRoles(user)</td>
                                <td>
                                    <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post">
                                        <button type="submit" class="btn btn-sm btn-danger">
                                            Delete
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </table>
                </div>

                <div class="tab-pane" id="tab_2">
                    <a asp-action="CreateStatus" class="btn btn-primary">Create a Status</a>
                    <table class="table table-sm table-bordered">
                        <tr><th>ID</th><th>Name</th><th>Delete</th></tr>
                        @foreach (TicketStatus status in Model.ticketStatuses)
                        {
                            <tr>
                                <td>@status.Id</td>
                                <td>@status.Name</td>
                                <td>
                                    <form asp-action="DeleteStatus" asp-route-id="@status.Id" method="post">
                                        <button type="submit" class="btn btn-sm btn-danger">
                                            Delete
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </table>
                </div>
            </div>

        </div>
    </div>
</div>

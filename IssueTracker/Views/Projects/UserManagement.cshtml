@model UserManagementViewModel

<h1 class="bg-info text-white">Update Users On Project</h1>
<a asp-action="Index" class="btn btn-secondary">Back</a>
<div asp-validation-summary="All" class="text-danger"></div>

<form method="post">
    <input type="hidden" name="projectId" value="@Model.Project.Id" />

    <h2 class="bg-info p-1 text-white">Add To @Model.Project.Title</h2>
    <table class="table table-bordered table-sm">
        @if (Model.NotOnProject.Count() == 0)
        {
            <tr><td colspan="2">All Users Are Members</td></tr>
        }
        else
        {
            @foreach (ApplicationUser user in Model.NotOnProject)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>
                        <input type="checkbox" name="AddIds" value="@user.Id">
                    </td>
                </tr>
            }
        }
    </table>

    <h2 class="bg-info p-1 text-white">Remove From @Model.Project.Title</h2>
    <table class="table table-bordered table-sm">
        @if (Model.OnProject.Count() == 0)
        {
            <tr><td colspan="2">No Users Are Members</td></tr>
        }
        else
        {
            @foreach (ApplicationUser user in Model.OnProject)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>
                        <input type="checkbox" name="DeleteIds" value="@user.Id">
                    </td>
                </tr>
            }
        }
    </table>
    <button type="submit" class="btn btn-primary">Save</button>
</form>